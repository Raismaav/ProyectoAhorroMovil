<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/tarjeta_blanca"
    android:clickable="true"
    android:elevation="2dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/tarjeta_blanca">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/tarjeta_secundaria_clara"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="2dp">
                    <ImageView
                        android:id="@+id/idCardImg"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/ic_05_tarjeta" >
                    </ImageView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="left"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/idCardTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Tipo de pago"
                        android:textSize="20dp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal"
            android:gravity="left">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:gravity="center"
                android:orientation="vertical">
                <ProgressBar
                    style="?android:progressBarStyleHorizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:progressBackgroundTint="@color/blue_700"
                    android:progressTint="@color/orange_500"
                    android:progress="0" >
                </ProgressBar>
            </LinearLayout>

            <LinearLayout
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/tarjeta"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_10_trofeo"
                        android:contentDescription="@string/app_name"
                        android:elevation="2dp"></ImageButton>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>